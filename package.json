{
  "name": "moonbob-money",
  "version": "1.0.0",
  "description": "Hardhat + Next.js Web3 application",
  "main": "index.js",
  "scripts": {
    "node": "hardhat node",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.js --network sepolia",
    "check:balance": "hardhat run scripts/check-balance.js",
    "check:balance:sepolia": "hardhat run scripts/check-balance.js --network sepolia",
    "verify:help": "echo 'Use: npx hardhat verify --network sepolia <address> <constructor-args>'",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start"
  },
  "keywords": [
    "hardhat",
    "nextjs",
    "ethereum",
    "solidity",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.0",
    "dotenv": "^16.4.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  }
}
